@model Library_Management.Models.BookSubsidiary

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Book-Subsidiary</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Quantity</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Quantity">
					<span asp-validation-for="Quantity" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Book Id</label>
				<div class="col-sm-8">
					<select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Subsidiary Id</label>
				<div class="col-sm-8">
					<select asp-for="SubsidiaryId" class="form-control" asp-items="ViewBag.SubsidiaryId"></select>
				</div>
			</div>
			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-action="Index" role="button">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>