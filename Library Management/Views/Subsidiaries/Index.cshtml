@model IEnumerable<Library_Management.Models.Subsidiary>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center mb-5">Subsidiaries</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-action="Create">Add Subsidiary</a>
	</div>
	<div class="col">
	</div>
</div>

<table class="table">
	<tr>
		<th>Name</th>
		<th>Address</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Address)
			</td>
			<td style="white-space:nowrap">
				<a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
				<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
	}
</table>