@model Library_Management.Models.User

@{
	ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this user?</h3>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Name
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			Email
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt class="col-sm-2">
			Address
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address)
		</dd>
		<dt class="col-sm-2">
			Phone
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PhoneNumber)
		</dd>
		<dt class="col-sm-2">
			Is Welcome
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.IsWelcome)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a class="btn btn-outline-primary" asp-action="Index" role="button">Cancel</a>
	</form>
</div>