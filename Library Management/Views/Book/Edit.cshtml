@model Library_Management.Models.Book

@{
	ViewData["Title"] = "Edit";
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Book</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Title</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Title">
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Author Id</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="AuthorId" asp-items="ViewBag.AuthorId"></select>
					<span asp-validation-for="AuthorId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Publisher Id</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="PublisherId" asp-items="ViewBag.PublisherId"></select>
					<span asp-validation-for="PublisherId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Genre Id</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="GenreId" asp-items="ViewBag.GenreId"></select>
					<span asp-validation-for="GenreId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Image</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ImageFile">
					<span asp-validation-for="ImageFile" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-action="Index" role="button">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>