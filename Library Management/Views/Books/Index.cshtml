@model IEnumerable<Library_Management.Models.Book>

@{
	ViewData["Title"] = "Index";
}

<h2 class="text-center mb-5">Books</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-action="Create">Add Book</a>
	</div>
	<div class="col">
	</div>
</div>

<table class="table">
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Publisher</th>
		<th>Genre</th>
		<th>Image</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Author.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Publisher.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Genre.Name)
			</td>
			<td>
				<img src="/books/@item.ImageFileName" width="100"/>
			</td>
			<td style="white-space:nowrap">
				<a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
				<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
	}
</table>