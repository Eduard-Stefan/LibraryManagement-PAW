@model Library_Management.Models.BorrowedBook

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this borrowed book?</h3>
<div>
	<hr/>
	<dl class="row">
		<dt class = "col-sm-2">
			User
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.User.Email)
		</dd>
		<dt class = "col-sm-2">
			Book
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.BookSubsidiary.Book.Title)
		</dd>
		<dt class="col-sm-2">
			Subsidiary
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.BookSubsidiary.Subsidiary.Name)
		</dd>
		<dt class = "col-sm-2">
			Borrowed Date
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.BorrowedDate)
		</dd>
		<dt class = "col-sm-2">
			Return Date
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.ReturnDate)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id"/>
		<input type="submit" value="Delete" class="btn btn-danger"/>
		<a class="btn btn-outline-primary" asp-action="Index" role="button">Cancel</a>
	</form>
</div>